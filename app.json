{
  "expo": {
    "name": "G-Booking",
    "slug": "g-booking",
    "scheme": "g-booking",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "usesAppleSignIn": true,
      "supportsTablet": false,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow $(PRODUCT_NAME) to use Face ID."
      },
      "bundleIdentifier": "com.gbooking"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.gbooking"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.gbooking"
        }
      ],
      [
        "expo-image-picker",
        {
          "photoPermission": "O aplicativo acessa suas fotos para deixar compartilhar com seus amigos."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Permitir $(PRODUCT_NAME) acessar seu microfone."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/favicon.png"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "7b4f1e20-b879-413d-b79c-1b49ef89bea5"
      }
    },
    "owner": "nathanpalatin"
  }
}